---
import Badge from './ui/Badge.astro';
import type { ImageItem } from '@/lib/types';

export interface Props {
  image: ImageItem;
  featured?: boolean;
  class?: string;
}

const { image, featured = false, class: className } = Astro.props;
---

<div class={`relative group overflow-hidden rounded-lg ${featured ? 'col-span-2 aspect-[2/1]' : 'col-span-1 aspect-[4/3]'} ${className || ''}`}>
  <a
    href={`/gallery/${image.category}/${image.handle}`}
    class="block size-full focus-visible:outline-none"
    aria-label={`View ${image.title} by ${image.photographer}`}
  >
    <img
      src={image.imageUrl}
      alt={image.title}
      width={featured ? 1200 : 600}
      height={featured ? 600 : 450}
      class="size-full object-cover group-hover:scale-105 transition-transform duration-500"
      loading="lazy"
    />
  </a>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
      {featured && (
        <div class="flex items-center gap-2 mb-3">
          <Badge variant="outline" class="text-white border-white/30 bg-white/10">
            featured
          </Badge>
        </div>
      )}
      <div class="flex items-center gap-2 mb-2">
        <Badge variant="outline" class="text-white border-white/30 bg-white/10">
          {image.category}
        </Badge>
      </div>
      <h3 class={`font-semibold mb-1 ${featured ? 'text-2xl' : 'text-lg'}`}>{image.title}</h3>
      <p class={`text-white/90 mb-2 ${featured ? 'text-base' : 'text-sm'}`}>{image.description}</p>
      <p class="text-white/70 text-sm">by {image.photographer}</p>
    </div>
  </div>
</div>
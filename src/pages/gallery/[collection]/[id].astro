---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Badge from '@/components/ui/Badge.astro';
import Button from '@/components/ui/Button.astro';
import { getImageByHandle, getCollectionByHandle, getImages } from '@/lib/data';

export async function getStaticPaths() {
  const images = getImages();
  return images.map((image) => ({
    params: { 
      collection: image.category,
      id: image.handle
    },
    props: { image }
  }));
}

const { image } = Astro.props;
const collection = getCollectionByHandle(image.category);
---

<Layout title={image.title} description={image.description}>
  <Header />
  
  <div class="bg-muted">
    <div class="flex flex-col md:grid md:grid-cols-12 md:gap-6">
      <!-- Mobile Image -->
      <div class="md:hidden col-span-full h-[60vh] min-h-[400px]">
        <img
          src={image.imageUrl}
          alt={image.title}
          width="800"
          height="600"
          class="w-full h-full object-cover"
        />
      </div>

      <div class="col-span-5 flex flex-col 2xl:col-span-4 max-md:col-span-full md:h-screen max-md:p-6 md:pl-6 md:pt-36 sticky max-md:static top-0">
        <div class="col-span-full">
          <nav class="col-span-full mb-3 md:mb-8" aria-label="breadcrumb">
            <ol class="text-muted-foreground flex flex-wrap items-center gap-1.5 text-sm break-words sm:gap-2.5">
              <li class="inline-flex items-center gap-1.5">
                <a href="/gallery" class="hover:text-foreground transition-colors font-medium">
                  Gallery
                </a>
              </li>
              {collection && (
                <>
                  <li>/</li>
                  <li class="inline-flex items-center gap-1.5">
                    <a href={`/gallery/${collection.handle}`} class="hover:text-foreground transition-colors font-medium">
                      {collection.title}
                    </a>
                  </li>
                </>
              )}
              <li>/</li>
              <li class="text-foreground font-semibold" role="link" aria-disabled="true" aria-current="page">
                {image.title}
              </li>
            </ol>
          </nav>

          <div class="flex flex-col gap-6 col-span-full mb-10 max-md:order-2">
            <div class="rounded bg-card py-4 px-4 flex flex-col gap-4">
              <div class="flex items-center gap-2">
                <Badge variant="outline">{image.category}</Badge>
              </div>
              <h1 class="text-2xl lg:text-3xl 2xl:text-4xl font-bold text-balance">
                {image.title}
              </h1>
              <p class="text-base text-muted-foreground leading-relaxed">{image.description}</p>
              
              <div class="pt-2">
                <p class="text-sm font-medium mb-2">Photographer</p>
                <p class="text-lg font-semibold">{image.photographer}</p>
              </div>
            </div>

            <Button
              size="lg"
              class="w-full gap-2"
              href={`https://unsplash.com/photos/${image.unsplashId}`}
            >
              View on Unsplash
              <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </Button>
          </div>
        </div>
      </div>

      <!-- Desktop Image -->
      <div class="hidden md:block col-start-6 col-span-7 w-full overflow-y-auto relative">
        <img
          src={image.imageUrl}
          alt={image.title}
          width="1200"
          height="800"
          class="w-full object-cover"
        />
      </div>
    </div>
  </div>
  
  <Footer />
</Layout>